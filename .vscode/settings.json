{
        "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
        "cmake.buildDirectory": "${workspaceFolder}/build/${buildType}",
        "cmake.configureArgs": [
                "-DBUILD_SHARED_LIBS:BOOL=ON",
                "-DDTK_NURBS_PROBING_BUILD_APPS:BOOL=ON",
                "-DCONCURRENT_MESH_3:BOOL=ON"
        ],
        "files.associations": {
                "*.h": "cpp",
                "*.tpp": "cpp",
                "*.cmake.in": "cmake",
                "*.lxx": "cpp"
        },
        "git.detectSubmodulesLimit": 15,
        "cSpell.words": [
                "Bezier",
                "CASCADEB",
                "Colgp",
                "DTKCONTINUOUSGEOMETRYCORE",
                "DTKCORE",
                "INRIA",
                "NURBSB",
                "QMETATYPE",
                "SISL",
                "SPDX",
                "Topo",
                "brep",
                "clocurves",
                "dcurves",
                "discretization",
                "distj",
                "gcurve",
                "itype",
                "mults",
                "numclocr",
                "numclopt",
                "nurb",
                "nurbs",
                "nurbsconvert",
                "occt",
                "opennurbs",
                "pcurve",
                "qstrlen",
                "quintptr",
                "statj",
                "tedge",
                "tface"
        ]
}